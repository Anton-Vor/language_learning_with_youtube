<div class="slide absolute  opacity-0">
  <div class="flex flex-col rounded-lg shadow-lg overflow-hidden">

    <button
      type="button"
      class="inline-flex items-center px-2 py-1  text-sm leading-5 font-medium rounded-md text-red-400 bg-white hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-800 active:bg-gray-50 transition ease-in-out duration-150">
      <%= link_to "Delete card", card_path(card), method: :delete, data: { confirm: "Are you sure?" } %>
    </button>
    <div class="flex-shrink-0">
      <img class="h-56 w-full object-cover" src="<%= card.gif %>" alt="">
    </div>
    <div class="flex-1 bg-white p-6 flex flex-col justify-between">
      <div class="flex-1">
        <div class="flex items-center justify-between word h-16  mt-2 text-3xl leading-7 font-semibold text-gray-900">
          <div>
            <h2 class="hover:hidden"><%= card.word.en %></h2>
            <h3 class="text-transparent hover:text-gray-500"><%= card.word.de %></h3>
          </div>
          <i class="cursor-pointer text-gray-600 text-xl fas fa-volume-up"></i>
        </div>
      </div>
    </div>
  </div>
</div>
