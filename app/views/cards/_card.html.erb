<div class="slide absolute opacity-0">
  <span class="absolute right-0 top-0 items-center px-1 py-1 rounded-md text-xs font-small leading-4 bg-red-100 text-red-700">
    <%= link_to "Delete", card_path(card), method: :delete, data: { confirm: "Are you sure?" } %>
    <i class="fas fa-trash-alt"></i>
  </span>
  <div class="mt-3 flex flex-col rounded-lg shadow-lg overflow-hidden">
    <div class="flex-shrink-0">
      <img class="h-64 w-full object-cover" src="<%= card.gif %>" alt="">
    </div>
    <div class="flex-1 h-32 bg-white p-6 flex flex-col justify-between">
      <div class="flex-1">
        <div class="flex items-center justify-between word h-16  mt-2 text-3xl leading-7 font-semibold text-gray-900">
          <div>
            <h2 class="hover:hidden"><%= card.word.en %></h2>
            <h3 class="text-transparent hover:text-gray-500"><%= card.word.fr %></h3>
          </div>
          <i class="cursor-pointer text-gray-600 text-2xl fas fa-volume-up"></i>
        </div>
      </div>
    </div>
  </div>
</div>
