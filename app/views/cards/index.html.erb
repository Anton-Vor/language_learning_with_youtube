<div class="container w-1/3 mt-16 mx-auto h-screen">

  <div class="slider" id="main-slider">
    <!-- outermost container element -->
    <div class="slider-wrapper">
      <%= render @cards.reverse %>
    </div>
  </div>

   <%= render 'buttons' %>
  <%= simple_form_for(@new_card) do |f| %>
  <%= f.hidden_field  :user_id, value: current_user.id %>
  <%= f.association :word, as: :select, label:false, collection: [], input_html: {class: "select2"} %>
  <%= f.submit class:"mt-2 bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-2 rounded-md inline-flex items-center" %>
  <% end %>
</div>
