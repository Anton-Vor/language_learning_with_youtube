<div class="container mx-auto mt-12 w-9/12">
  <div class="pt-12 bg-white">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:text-center">
        <p class="text-base leading-6 text-red-c font-semibold tracking-wide uppercase">Library</p>
        <h3 class="mt-2 mb-6 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl sm:leading-10">
          Browse for videos at your language level
        </h3>

      <div class="bg-white mt-10">
        <div class="bg-white container mx-auto w-1/2 pb-4">
          <div class="flex items-center">
            <div class="rounded-md w-full shadow-sm">
              <%= form_tag root_path, method: :get do %>
              <%= text_field_tag :query, params[:query], class: "pl-4 form-control w-full h-12 border-solid border-2 border-gray-200  rounded-none rounded-l-md transition ease-in-out duration-150 sm:text-sm sm:leading-5", placeholder: "Find a video" %>
            </div>
            <div class="">
              <%= submit_tag "Search", class: " rounded-r-md h-12 w-full flex items-center justify-center px-5 py-3 border border-transparent text-base leading-6 font-medium  text-white bg-red-c hover:bg-transparent hover:border-red-c hover:text-red-c focus:outline-none focus:shadow-outline transition duration-150 ease-in-out"%>
            </div>
            <% end %>

          </div>
          <div class="container items-center mt-8 flex">
            <span class="py-2 px-2 mr-2  px-4 py-2 rounded text-md font-medium leading-4 text-teal-800" href="/">Level:</span>
            <a class="py-2 px-2 mr-2  px-4 py-2 rounded text-md font-medium leading-4 bg-level-1 text-white" href="/?level=A1&commit=Search">A1</a>
            <a class="py-2 px-2 mr-2  px-4 py-2 rounded text-md font-medium leading-4 bg-level-2 text-white" href="/?level=A2&commit=Search">A2</a>
            <a class="py-2 px-2 mr-2  px-4 py-2 rounded text-md font-medium leading-4 bg-level-3 text-white" href="/?level=B1&commit=Search">B1</a>
            <a class="py-2 px-2 mr-2  px-4 py-2 rounded text-md font-medium leading-4 bg-level-4 text-white" href="/?level=B2&commit=Search">B2</a>
            <a class="py-2 px-2 mr-2  px-4 py-2 rounded text-md font-medium leading-4 bg-level-5 text-white" href="/?level=C1&commit=Search">C1</a>
            <a class="py-2 px-2 mr-2  px-4 py-2 rounded text-md font-medium leading-4 bg-level-6 text-white" href="/?level=C2&commit=Search">C2</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg mb-16">
        <table class="min-w-full divide-y divide-gray-200 table-fixed">
          <thead>
            <tr>
              <th class="w-9/12 px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Title
              </th>
              <th class="w-2/12 px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Language Level
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">

            <%  @videos.reverse.each do |video|%>
              <tr>
                <td class="px-6 py-4 whitespace-no-wrap">
                  <div class="flex">
                    <img src="<%= video.thumbnails %>" alt="" class="w-1/12 mr-3">
                    <div>
                      <div class="text-sm leading-5 text-gray-900">
                        <%= video.title %></div>
                      <%= link_to video_path(video) do %>
                      <div class="text-sm leading-5 text-gray-500"><%= video.channel %>
                        - 2.161.346 views</div>
                    </div>
                  </div>
                <% end %>
              </td>
              <td class="ml-4 px-6 py-4 whitespace-no-wrap">
                <div class="rounded border-gray-700 flex justify-center w-48 shadow-md px-3 py-2 bg-level-6  hover:text-white">
                  <p class="text-white">training:
                    <%= video.training %>
                    words:<%= video.level %>
                  </p>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
</div>
